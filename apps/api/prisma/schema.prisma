datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id               String     @id @default(cuid())
  firstName        String?
  lastName         String?
  documentsOwned   Document[] @relation("OwnedDocuments")
  documentsHeld    Document[] @relation("HeldDocuments")
}

model Document {
  id               String    @id @default(cuid())
  title            String
  type             String // memorandum | office_order | communication_letter
  content          String // JSON or serialized blocks
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  tags             String[]
  controlNumber    String    @unique @default(cuid())
  userID           String    @default("legacy_user")
  uploadedBy       String // Combination of first and last name
  originalOwnerId  String
  originalOwner    User      @relation("OwnedDocuments", fields: [originalOwnerId], references: [id])
  heldById         String
  heldBy           User      @relation("HeldDocuments", fields: [heldById], references: [id])
  inTransit        Boolean   @default(false)
  intendedHolderId String?
}

model Notification {
  id        String   @id @default(cuid())
  message   String
  documentId String?  // Optional link to a document
  userId    String   // The user who receives the notification
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([userId])
}

model Tag {
  id   String @id @default(cuid())
  name String @unique
}