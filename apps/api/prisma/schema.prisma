// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String         @id // Supabase Auth User ID
  email          String         @unique
  name           String? // Your router query uses 'name', not 'displayName'
  role           Role           @default(USER)
  organization   Organization?  @relation(fields: [organizationId], references: [id])
  organizationId String?
  documents      Document[]     @relation("uploadedBy") // Matches relation name 'uploadedBy' in Document
  DocumentAccess DocumentAccess[]
}

model Organization {
  id        String     @id @default(cuid())
  name      String
  users     User[]
  documents Document[] // Add this relation
}

model Document {
  id             String   @id @default(cuid())
  title          String
  content        String
  s3Key          String   @unique
  s3Bucket       String
  
  // Your router queries 'uploadedBy', so we use that relation name
  uploadedBy     User     @relation("uploadedBy", fields: [uploadedById], references: [id])
  uploadedById   String

  // Your router queries 'organizationId', so we add this relation
  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId String

  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  
  fileType         String?
  fileSize         Int?
  
  access         DocumentAccess[]
  
  // Your router queries 'tags: { include: { tag: true } }'
  // This requires an explicit join table model
  tags           DocumentTag[]
}

model DocumentAccess {
  id         String   @id @default(cuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  document   Document @relation(fields: [documentId], references: [id])
  documentId String
  accessType String // e.g., "READ", "WRITE"
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Tag {
  id        String        @id @default(cuid())
  name      String        @unique
  documents DocumentTag[] // Relation to the join table
}

// Explicit join table for Document <-> Tag
// This is required for your 'include: { tag: true }' query
model DocumentTag {
  id         String   @id @default(cuid())
  document   Document @relation(fields: [documentId], references: [id])
  documentId String
  tag        Tag      @relation(fields: [tagId], references: [id])
  tagId      String

  @@unique([documentId, tagId])
}

enum Role {
  USER
  ADMIN
  OWNER
}