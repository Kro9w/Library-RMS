// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum DispositionAction {
  ARCHIVE
  DESTROY
}

// apps/api/prisma/schema.prisma

model User {
  id         String  @id // Supabase Auth User ID
  email      String  @unique
  firstName  String
  middleName String?
  lastName   String
  imageUrl   String? // URL for the user's profile picture

  organization   Organization? @relation(fields: [organizationId], references: [id])
  organizationId String?

  campus   Campus? @relation(fields: [campusId], references: [id])
  campusId String?

  department   Department? @relation(fields: [departmentId], references: [id])
  departmentId String?

  documents       Document[] @relation("uploadedBy")
  roles           Role[] // Implicit M:N
  logs            Log[]
  Remark          Remark[]
  reviewRequested Document[] @relation("DocumentReviewRequester")
}

model Role {
  id                 String  @id @default(cuid())
  name               String
  level              Int     @default(4) // 1: Leader, 2: Co-Leader, 3: Elder, 4: Member
  canManageUsers     Boolean @default(false)
  canManageRoles     Boolean @default(false)
  canManageDocuments Boolean @default(false)
  users              User[] // Implicit M:N

  campus   Campus @relation(fields: [campusId], references: [id])
  campusId String
}

model Organization {
  id            String         @id @default(cuid())
  name          String
  acronym       String
  users         User[]
  campuses      Campus[]
  documents     Document[]
  documentTypes DocumentType[]
  logs          Log[]
}

model Campus {
  id             String       @id @default(cuid())
  name           String
  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId String
  departments    Department[]
  users          User[]
  roles          Role[]
}

model Department {
  id       String @id @default(cuid())
  name     String
  icon     String @default("default-icon.png")
  campus   Campus @relation(fields: [campusId], references: [id])
  campusId String
  users    User[]
}

model Log {
  id             String       @id @default(cuid())
  user           User         @relation(fields: [userId], references: [id])
  userId         String
  action         String
  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId String
  userRole       String
  createdAt      DateTime     @default(now())
}

model DocumentType {
  id                        String            @id @default(cuid())
  name                      String
  color                     String
  organization              Organization      @relation(fields: [organizationId], references: [id])
  organizationId            String
  documents                 Document[]
  activeRetentionDuration   Int               @default(0) // In Years
  inactiveRetentionDuration Int               @default(0) // In Years
  dispositionAction         DispositionAction @default(ARCHIVE)
}

model Document {
  id            String  @id @default(cuid())
  fileName      String
  controlNumber String?
  title         String
  content       String
  s3Key         String  @unique
  s3Bucket      String

  documentType   DocumentType? @relation(fields: [documentTypeId], references: [id])
  documentTypeId String?

  uploadedBy   User   @relation("uploadedBy", fields: [uploadedById], references: [id])
  uploadedById String

  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  fileType String?
  fileSize Int?

  tags Tag[] // Implicit M:N

  reviewRequester   User?   @relation("DocumentReviewRequester", fields: [reviewRequesterId], references: [id])
  reviewRequesterId String?

  status  String? // eg. approved, returned, disapproved
  remarks Remark[]

  activeRetentionSnapshot   Int?
  inactiveRetentionSnapshot Int?
  dispositionActionSnapshot DispositionAction?
  dispositionStatus         String? // 'ARCHIVED', 'DESTROYED'

  @@index([organizationId])
  @@index([uploadedById])
  @@index([documentTypeId])
}

model Tag {
  id        String     @id @default(cuid())
  name      String     @unique
  documents Document[] // Implicit M:N
  isGlobal  Boolean    @default(false)
  isLocked  Boolean    @default(false)
}

model Remark {
  id         String   @id @default(cuid())
  message    String
  document   Document @relation(fields: [documentId], references: [id])
  documentId String
  author     User     @relation(fields: [authorId], references: [id])
  authorId   String
  createdAt  DateTime @default(now())
}
